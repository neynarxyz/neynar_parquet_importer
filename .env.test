# Test Environment Configuration
# This file is used by the Docker test environment

# Database Backend (can be overridden by environment)
DATABASE_BACKEND=postgresql

# PostgreSQL Configuration (Docker service)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=neynar_parquet_importer
POSTGRES_SCHEMA=public

# Neo4j Configuration (Docker service)
NEO4J_URI=neo4j://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=testpassword
NEO4J_DATABASE=neo4j
BATCH_SIZE_NEO4J=100

# Test-specific settings
TABLES=fids,follows,verifications
VIEWS=
CU_MODE=off
DATADOG_ENABLED=false
DOWNLOAD_WORKERS=2
FILE_WORKERS=2
ROW_WORKERS=2
INTERACTIVE_DEBUG=false

# Disable external dependencies for testing
APP_UUID=test-uuid
TARGET_NAME=test
